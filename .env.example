# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/verifiable_forms # PostgreSQL connection string

# Server Configuration  
PORT=5000 # API server port
NODE_ENV=development # Environment: development | production | test

# VC Feature Flags
ENABLE_VC=true # Backend VC functionality: true | false
VITE_ENABLE_VC=true # Frontend VC functionality: true | false

# Orbit Enterprise API Configuration
ORBIT_API_KEY=your-orbit-api-key-here # API key from Orbit Enterprise
ORBIT_BASE=https://testapi-verifier.nborbit.ca # Orbit API base URL
ORBIT_VERIFIER_BASE_URL=https://testapi-verifier.nborbit.ca # Orbit verifier endpoint
ORBIT_LOB_ID=your-lob-id-here # Line of Business ID from Orbit
ORBIT_USE_REAL=true # Use real Orbit API: true | false

# Orbit WebSocket Configuration
ORBIT_WS_URL=wss://devapi-orbit.nborbit.ca/socket # WebSocket URL for real-time verification
ORBIT_TRANSACTION_ID=your-transaction-id-here # Transaction ID for WebSocket testing

# Legacy VC API Configuration (deprecated)
VC_API_BASE_URL=https://api.example.com # Legacy VC API base URL
VC_API_KEY=your-vc-api-key # Legacy VC API key
VITE_VC_API_BASE_URL=https://api.example.com # Frontend VC API base URL
VITE_VC_API_KEY=your-vc-api-key # Frontend VC API key

# External Auth Provider Configuration (optional)
AUTH_BASE=https://auth.myorg.com # Authentication provider base URL
AUTH_API_KEY=your-auth-api-key # Authentication provider API key

# Development/Testing Configuration
QR_VALIDATE=true # Enable QR code validation: true | false
VITE_DEV_OWNER_BYPASS=false # Development owner bypass: true | false
REPL_ID=your-repl-id # Replit environment ID (auto-set in Replit)

# Orbit LOB Registration Configuration (used for initial setup)
LOB_DISPLAY_NAME=Form Builder Dev # Display name for LOB registration
LOB_EMAIL=admin@mycompany.com # Email for LOB registration
LOB_ORG_NAME=My Company Inc. # Organization name for LOB registration
LOB_ROLE=ISSUER # LOB role: ISSUER | VERIFIER | BOTH
LOB_TENANCY=SINGLE # LOB tenancy: SINGLE | MULTI
LOB_DID_METHOD=did:sov # DID method: did:sov | did:web
LOB_PROTOCOL=AIP2_0 # Protocol version: AIP1_0 | AIP2_0
WRITE_LEDGER_ID=1 # Ledger ID for writing
CRED_FORMAT=ANONCREDS # Credential format: ANONCREDS | W3C

# Optional Orbit Configuration
LOB_TRUST_URL= # Trust registry URL (optional)
LOB_TRUST_API_KEY= # Trust registry API key (optional)
LOB_EXTERNAL_ENDORSER=false # Use external endorser: true | false
ENDORSER_DID= # Endorser DID (if using external endorser)
ENDORSER_NAME= # Endorser name (if using external endorser)

# Legacy Database Configuration (auto-managed by Replit)
PGDATABASE=your_db_name # PostgreSQL database name
PGHOST=your_db_host # PostgreSQL host
PGPASSWORD=your_db_password # PostgreSQL password
PGPORT=5432 # PostgreSQL port
PGUSER=your_db_user # PostgreSQL username

# Session Configuration
SESSION_SECRET=your_session_secret_here # Session encryption secret